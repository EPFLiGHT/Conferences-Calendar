# Slack Bot Configuration for LiGHT Lab Conferences Calendar
# Copy this file to .env.local and fill in your actual values

# Slack API Credentials
# Get these from https://api.slack.com/apps
SLACK_CLIENT_ID=your-client-id-here
SLACK_CLIENT_SECRET=your-client-secret-here
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Conference data URL (where YAML files are hosted - base URL only)
# Bot fetches from: /data/conferences.yaml, /data/summits.yaml, /data/workshops.yaml
# For production: https://conferences.light-laboratory.org
# For local dev: http://localhost:3000
CONFERENCES_DATA_URL=http://localhost:3000

# App URL (where Next.js app is deployed - used for API routes)
# IMPORTANT: For production, set this to your Vercel URL: https://conferences-calendar.vercel.app
# For local dev: http://localhost:3000
# This is used for generating calendar download links and OAuth callbacks
APP_URL=http://localhost:3000

# Cron job authentication secret
# Generate a random secret for security
CRON_SECRET=your-random-secret-here

# Slack Channel Reminders Configuration
# Days before deadline to send channel reminders (comma-separated)
CHANNEL_REMINDER_DAYS=30,7,3

# Vercel KV (Redis) Credentials
# Get these from your Vercel dashboard or Upstash
KV_URL=rediss://default:your-password@your-instance.upstash.io:6379
KV_REST_API_URL=https://your-instance.upstash.io
KV_REST_API_TOKEN=your-kv-token-here
KV_REST_API_READ_ONLY_TOKEN=your-readonly-token-here
REDIS_URL=rediss://default:your-password@your-instance.upstash.io:6379
