# Slack Bot Configuration for LiGHT Lab Conferences Calendar
# Copy this file to .env.local and fill in your actual values

# Slack API Credentials
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Conference data URL (where YAML file is hosted - base URL only)
# The code will append "/data/conferences.yaml" automatically
CONFERENCES_DATA_URL=http://localhost:3000

# App URL (where Next.js app is deployed - used for API routes)
# IMPORTANT: For production, set this to your public Vercel URL (e.g., https://your-app.vercel.app)
# This is used for generating public calendar download links
APP_URL=http://localhost:3000

# Cron job authentication secret
CRON_SECRET=your-random-secret-here

# Slack Channel Reminders Configuration
# Channel ID where automated reminders will be posted (e.g., C09MFHL6ETU)
# Find channel ID: Right-click channel → View channel details → Copy ID
SLACK_REMINDERS_CHANNEL_ID=C09MFHL6ETU
# Number of upcoming conferences to show in reminders (default: 10)
REMINDERS_COUNT=10

# Vercel KV (Redis) Credentials
# Get these from your Vercel dashboard or Upstash
KV_URL=rediss://default:your-password@your-instance.upstash.io:6379
KV_REST_API_URL=https://your-instance.upstash.io
KV_REST_API_TOKEN=your-kv-token-here
KV_REST_API_READ_ONLY_TOKEN=your-readonly-token-here
REDIS_URL=rediss://default:your-password@your-instance.upstash.io:6379
